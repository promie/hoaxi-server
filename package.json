{
  "name": "hoaxi-server",
  "version": "1.0.0",
  "description": "Hoaxify Server",
  "main": "app.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=development tsnd --cls src/index.ts",
    "client": "cd client && npx http-server -c-1 -p 8080 -P http://localhost:3000",
    "dev": "cross-env NODE_ENV=development tsnd --cls src/index.ts",
    "build": "tsc",
    "formatting": "prettier --check src",
    "lint": "eslint src",
    "test": "cross-env NODE_ENV=test jest --verbose -c jest.config.js",
    "test:watch": "cross-env NODE_ENV=test jest --watch --verbose -c jest.config.js",
    "test:unit": "cross-env NODE_ENV=test jest --verbose -c jest.config.unit.js",
    "test:integration": "cross-env NODE_ENV=test jest --verbose -c jest.config.int.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/promie/hoaxi-server.git"
  },
  "type": "module",
  "author": "Promie Yutasane",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/promie/hoaxi-server/issues"
  },
  "homepage": "https://github.com/promie/hoaxi-server#readme",
  "dependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "bcrypt": "^5.0.1",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "i18next": "^21.3.3",
    "i18next-fs-backend": "^1.1.1",
    "i18next-http-middleware": "^3.1.4",
    "morgan": "^1.10.0",
    "sequelize": "^6.7.0",
    "sqlite3": "^5.0.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/config": "0.0.39",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/jest": "^27.0.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-functional": "^3.7.2",
    "eslint-plugin-prettier": "^4.0.0",
    "http-status": "^1.5.0",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.6",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  }
}
